server {
  listen 80;
  server_name localhost;

  root /var/www/html{{ eq .Values.subDirectory nil | ternary "" (print "/"  .Values.subDirectory) }};

  index  index.html index.php;

  # redirect server error pages to the static page /50x.html
  #
  #error_page 500 502 503 504 /50x.html;
  #location = /50x.html {
  #  root /usr/share/nginx/html;
  #}

  location / {
    try_files $uri $uri/ @rewrite;
  }
  location @rewrite {
    # rewrite ^/(.*)$ /index.php?$query_string;
    rewrite ^/(.*)$ /index.php?q=$1;
  }

  location ~ \.php$ {
    fastcgi_buffer_size 32k;
    fastcgi_buffers 4 32k;
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass 127.0.0.1:9000;
    fastcgi_index index.php;
    include fastcgi_params;
    fastcgi_param SCRIPT_FILENAME /var/www/html{{ eq .Values.subDirectory nil | ternary "" (print "/"  .Values.subDirectory) }}$fastcgi_script_name;
    fastcgi_param PATH_INFO $fastcgi_path_info;
    fastcgi_read_timeout 600;
  }

  location ~ /\.ht {
    deny all;
  }

}